{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "webpack.config.dev.ts",
    "webpack.config.ts"
  ]
} 