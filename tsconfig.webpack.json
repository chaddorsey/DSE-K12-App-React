{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "isolatedModules": false
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
} 